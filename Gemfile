# Gemfile
source 'https://rubygems.org'

# wikipedia API client
gem 'wikipedia-client'

# ruby wrapper for c++ standard implementation of priority queue
gem 'priority_queue_cxx'

# REST-like API framework
gem 'grape'
gem 'grape-entity'

# webservers interface
gem 'rack'

# elasticsearch API client
gem 'elasticsearch'

# redis API client
gem 'redis', '~>3.2'

# tests
gem 'rspec'
